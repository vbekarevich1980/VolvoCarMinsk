#:import VCMIconButton View.MainScreen.components.main_menu_buttons
#:import VCMRectangleFlatIconButton View.MainScreen.components.main_menu_buttons
#:import get_color_from_hex kivy.utils.get_color_from_hex


<MainScreenView>

    MDBottomNavigation:
        id: navi
        panel_color: get_color_from_hex("#ffffff")
        text_color_active: get_color_from_hex("#2f5377")
        use_text: False
        widget_style: "ios"

        MDBottomNavigationItem:
            id: home_tab
            name: 'home'
            icon: 'home'
            badge_icon: "numeric-10"
            widget_style: "ios"

            MDLabel:
                text: 'HOME'
                halign: 'center'

        MDBottomNavigationItem:
            id: shop_tab
            name: 'shop'
            icon: 'car-multiple'
            badge_icon: "numeric-10"
            widget_style: "ios"

            #MyScreenManager:



        MDBottomNavigationItem:
            id: car_tab
            name: 'car'
            icon: 'car'
            badge_icon: "numeric-10"
            widget_style: "ios"

            MDLabel:
                text: 'CAR'
                halign: 'center'

        MDBottomNavigationItem:
            id: contact_tab
            name: 'contact'
            icon: 'message'
            badge_icon: "numeric-10"
            widget_style: "ios"

            MDLabel:
                text: 'CONTACT'
                halign: 'center'

        MDBottomNavigationItem:
            id: account_tab
            name: 'account'
            icon: 'account'
            badge_icon: "numeric-10"
            widget_style: "ios"

            MDLabel:
                text: 'ACCOUNT'
                halign: 'center'
    BoxLayout:
        canvas.before:
            Color:
                rgba: get_color_from_hex("#ffffff")
            Rectangle:
                size: self.size
        orientation: "horizontal"
        size_hint: 1, .123

        VCMIconButton:
            id: home_button
            size_hint: .2, 1
            source: "assets/icons/home-active.png"
            widget_style: "ios"
            on_press: root.controller.on_navi_button_pressed('home')
        VCMIconButton:
            id: shop_button
            color: 1, 1, 1, 1
            size_hint: .2, 1
            source: "assets/icons/shop-inactive.png"
            widget_style: "ios"
            on_press: root.controller.on_navi_button_pressed('shop')
        VCMIconButton:
            id: car_button
            size_hint: .2, 1
            source: "assets/icons/car-inactive.png"
            widget_style: "ios"
            on_press: root.controller.on_navi_button_pressed('car')
        VCMIconButton:
            id: contact_button
            size_hint: .2, 1
            source: "assets/icons/contact-inactive.png"
            widget_style: "ios"
            on_press: root.controller.on_navi_button_pressed('contact')
        VCMIconButton:
            id: account_button
            size_hint: .2, 1
            source: "assets/icons/account-inactive.png"
            widget_style: "ios"
            on_press: root.controller.on_navi_button_pressed('account')

