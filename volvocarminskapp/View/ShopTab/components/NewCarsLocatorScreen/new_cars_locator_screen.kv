
<NewCarsLocatorScreenView>:

    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            adaptive_height: True

            MDIconButton:
                icon: "chevron-left"
                ripple_scale: 0
                on_release:
                    root.manager_screens.transition.direction = 'right'
                    root.manager_screens.current = 'shop_main'

            MDLabel:
                text: "Новые автомобили в наличии"
                font_style: "Subtitle2"

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                height: new_cars_image.height + new_cars_text.height
                adaptive_height: True


                FitImage:
                    id: new_cars_image
                    source: "assets/images/buy_newcars_locator.jpeg"

                MDBoxLayout:
                    id: new_cars_text
                    padding: dp(5)
                    size_hint_y: .3

                    MDLabel:
                        text: "NEW CARS"
                        bold: True