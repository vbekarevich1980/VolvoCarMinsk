#:kivy 2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

Screen:

    MainScreenBottomNavigation:
        id: navi
        panel_color: get_color_from_hex("#ffffff")
        text_color_active: get_color_from_hex("#2f5377")
        use_text: False
        widget_style: "ios"

    BoxLayout:
        canvas.before:
            Color:
                rgba: get_color_from_hex("#ffffff")
            Rectangle:
                size: self.size
        orientation: "horizontal"
        size_hint: 1, .123

        MainScreenNavigationButton:
            id: home_button
            size_hint: .2, 1
            source: "assets/icons/home-active.png"
            widget_style: "ios"
            on_press: navi.on_navi_button_pressed('home')
        MainScreenNavigationButton:
            id: shop_button
            color: 1, 1, 1, 1
            size_hint: .2, 1
            source: "assets/icons/shop-inactive.png"
            widget_style: "ios"
            on_press: navi.on_navi_button_pressed('shop')
        MainScreenNavigationButton:
            id: car_button
            size_hint: .2, 1
            source: "assets/icons/car-inactive.png"
            widget_style: "ios"
            on_press: navi.on_navi_button_pressed('car')
        MainScreenNavigationButton:
            id: contact_button
            size_hint: .2, 1
            source: "assets/icons/contact-inactive.png"
            widget_style: "ios"
            on_press: navi.on_navi_button_pressed('contact')
        MainScreenNavigationButton:
            id: account_button
            size_hint: .2, 1
            source: "assets/icons/account-inactive.png"
            widget_style: "ios"
            on_press: navi.on_navi_button_pressed('account')
